while getopts 'hs:t:' OPTION; do
    case "$OPTION" in
        h)
            echo "Option h is given"
            ;;
        s)
            iarg="$OPTARG"
            echo "Scheme provided: $iarg"
            ;;
        t)
            iarg="$OPTARG"
            echo "Target provided: $iarg"
            ;;
        *)
            echo "Usage: $0 [-h] [-s scheme] [-t target]" >&2
            exit 1
            ;;
    esac
done

kittypath=$(find ~ -type f -name "kitty.conf")
base00=$(grep "color0" "$kittypath" | sed 's/color0 #//')
scheme=$(grep "('$base00" colorchange | cut -f 1 -d =)
echo "$scheme"

for index in ${!SolarizedD[*]}; do
    #grep -r -l "${SolarizedD[$index]}" | xargs sed -i "s/${SolarizedD[$index]}/${SolarizedL[$index]}/g"
    echo "$index"
done
